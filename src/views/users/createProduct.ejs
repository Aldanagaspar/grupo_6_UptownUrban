<body>
    <header>
        <nav>
            <div class="nav-mobile">
                <i class="fa-solid fa-bars"></i>
                <img class="header-logo" src="/img/Logo.png" alt="Logo de la marca">
                <div>
                    <i class="fa-solid fa-cart-shopping"></i>
                    <i class="fa-solid fa-user"></i>
                </div>
                <form>
                    <label>
                        <input type="text" placeholder="Buscar...">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </label>
                </form>
            </div>
            <div class="nav-md-lg">
                <img class="header-logo" src="/img/Logo.png" alt="Logo de la marca">
                <ul class="nav-bar">
                    <li><a href="#">Categorias</a></li>
                    <li><a href="#">Ofertas</a></li>
                    <li><a href="#" class="vende">Vendé tu Ropa</a></li>
                </ul>
                <form>
                    <label>
                        <input type="text" placeholder="Buscar...">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </label>
                </form>
                <ul class="login-bar">
                    <li><a href="#">Carrito<i class="fa-solid fa-cart-shopping"></i></a></li>
                    <li><a href="#">Registro</a></li>
                    <li><a href="#">Iniciar Sesion</a></li>
                </ul>
                <div>
                    <i class="fa-solid fa-cart-shopping"></i>
                    <i class="fa-solid fa-user"></i>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            <div class="title-form">
                <div class="labels">
                    <p>Nombre del Producto</p>
                    <p>Precio</p>
                    <p>Categoria</p>
                    <p>Estado</p>
                    <p>Talle</p>
                    <p>Color</p>
                    <p>Marca</p>
                    <p>Cantidad</p>
                </div>
                <form>
                    <input type="text" placeholder="Nombre del Producto">
                    <input type="text" placeholder="Precio">
                    <select name="categoria">
                        <option value="">Seleccionar categoria</option>
                        <option value="remera">Remera</option>
                        <option value="campera">Campera</option>
                        <option value="pantalon">Pantalón</option>
                        <option value="zapatillas">Zapatillas</option>
                        <option value="accesorios">Accesorios</option>
                    </select>
                      <select name="estado">
                          <option value="">Seleccionar estado del producto</option>
                          <option value="Nuevo">Nuevo</option>
                          <option value="Usada">Nuevo</option>
                          <option value="Semi-nuevo">Semi-nuevo</option>
                        </select>
                        <input type="text" placeholder="Talle">
                        <input type="text" placeholder="Color">
                        <input type="text" placeholder="Marca (opcional)">
                        <input type="text" placeholder="Cantidad">
                    </form>
                    
                </div>
                <div class="img-product-add">
                    <h2>Imagen del Producto</h2>
                    <div class="add-img">
                        <p>Añade imagenes</p>
                    </div>
                    <p>Descripción</p>
                <textarea name="descripcion" placeholder="Descripción"></textarea>
            </div>
            <div class="btns">
                <button class="cargar">Cargar producto</button>
                <button class="modificar">Modificar producto</button>
            </div>
        </div>
    </main>
    <footer id="footer">
        <div>
            <h2>Categorias</h2>
            <ul>
                <li><a href="#">Hombre</a></li>
                <li><a href="#">Mujer</a></li>
                <li><a href="#">Infantil</a></li>
                <li><a href="#">Accesorios</a></li>
                <li><a href="#">Calzado</a></li>
                <li><a href="#">Ofertas</a></li>
            </ul>
        </div>
        <div>
            <h2>Acerca de</h2>
            <ul>
                <li><a href="#">Used Fashion</a></li>
                <li><a href="#">Términos y Condiciones</a></li>
                <li><a href="#">Politica de privacidad</a></li>
            </ul>
        </div>
        <div class="logo-footer-container">
            <img class="logo-footer" src="/img/Logo.png" alt="Logo de Marca">
        </div>
        <div>
            <h2>Contacto</h2>
            <ul>
                <li>Telefono de Contacto: 388-1234567</li>
                <li>Email: usedfashion@gmail.com</li>
                <li>Direccion: Calle Cualquiera N°123,San salvador de Jujuy, Jujuy</li>
            </ul>
        </div>
        <div class="container-sociales">
            <h2>Seguinos</h2>
            <ul class="redes-sociales">
